{
  "$schema": "https://json.schemastore.org/tsconfig",
  "ts-node": {
    "compilerOptions": {
      "module": "NodeNext"
    }
  },
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "./dist",
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "bundler",
    "noEmit": true,
    "strict": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2022", "DOM"],
    "paths": {
      "$lib/*": ["./src/lib/*"],
      "$util/*": ["./src/lib/util/*"]
    }
  },
  "include": ["./src/**/*", "scripts/**/*", "tmp/generator"],
  "exclude": ["**/*.test.ts", "node_modules"]
}
