{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "./dist",
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "es2022",
    "verbatimModuleSyntax": true,
    "sourceMap": true,
    "strict": true,
    "isolatedModules": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitReturns": true,
    "noImplicitThis": true
  },
  "include": ["./src/**/*"],
  "exclude": ["**/*.test.ts"]
}
